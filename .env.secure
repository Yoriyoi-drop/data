# SECURE ENVIRONMENT CONFIGURATION
# Copy this to .env and update values

# JWT Security (CRITICAL - Change this!)
JWT_SECRET_KEY=your-super-secret-jwt-key-minimum-32-characters-long-change-this-now
TOKEN_EXPIRE_HOURS=24

# Database Security
DATABASE_ENCRYPTION_KEY=your-database-encryption-key-32-chars

# API Security
RATE_LIMIT_PER_MINUTE=100
MAX_REQUEST_SIZE=10000

# System Security
ADMIN_PASSWORD=your-secure-admin-password-change-this
DEBUG_MODE=false
LOG_LEVEL=INFO

# Production Settings
ENVIRONMENT=production
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com