# ========================================
# INFINITE AI SECURITY PLATFORM V2.0
# Environment Configuration Template
# ========================================
# 
# SECURITY WARNING:
# 1. NEVER commit .env file to git
# 2. Generate strong secrets using: python -c "import secrets; print(secrets.token_urlsafe(64))"
# 3. Rotate secrets regularly (every 90 days minimum)
# 4. Use secret management service in production (HashiCorp Vault, AWS Secrets Manager)
#
# ========================================

# ===== JWT CONFIGURATION =====
# CRITICAL: Generate using: python -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET_KEY=CHANGE_ME_GENERATE_RANDOM_SECRET_64_BYTES
JWT_REFRESH_SECRET=CHANGE_ME_GENERATE_DIFFERENT_RANDOM_SECRET_64_BYTES
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ===== API CONFIGURATION =====
API_SECRET_KEY=CHANGE_ME_GENERATE_RANDOM_SECRET_64_BYTES
API_VERSION=v2.0
DEBUG=false
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000

# ===== SESSION CONFIGURATION =====
# CRITICAL: Generate using: python -c "import secrets; print(secrets.token_urlsafe(64))"
SESSION_SECRET=CHANGE_ME_GENERATE_RANDOM_SECRET_64_BYTES
SESSION_COOKIE_NAME=__Secure-Session
SESSION_MAX_AGE=1800
SESSION_SAME_SITE=strict
SESSION_HTTPS_ONLY=true

# ===== DATABASE CONFIGURATION (PostgreSQL) =====
DB_BACKEND=postgres
PG_HOST=127.0.0.1
PG_PORT=5432
PG_USER=postgres
PG_PASSWORD=CHANGE_ME_USE_STRONG_PASSWORD
PG_DATABASE=infinite_ai
PG_POOL_SIZE=20
PG_MAX_OVERFLOW=10

# ===== DATABASE CONFIGURATION (SQLite Fallback) =====
SQLITE_PATH=infinite_security_v2.db

# ===== REDIS CONFIGURATION (for distributed rate limiting) =====
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=CHANGE_ME_IF_REDIS_HAS_PASSWORD

# ===== MONGODB CONFIGURATION (Optional - for audit mirroring) =====
MONGO_URI=mongodb://localhost:27017
MONGO_DB=infinite_ai
MONGO_USER=
MONGO_PASSWORD=

# ===== CORS CONFIGURATION =====
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ===== RATE LIMITING =====
RATE_LIMIT_ENABLED=true
RATE_LIMIT_LOGIN_MAX=5
RATE_LIMIT_LOGIN_WINDOW=300
RATE_LIMIT_API_MAX=100
RATE_LIMIT_API_WINDOW=60

# ===== SECURITY FEATURES =====
ENABLE_MFA=true
ENABLE_CSRF_PROTECTION=true
ENABLE_SECURITY_HEADERS=true
ENABLE_INPUT_VALIDATION=true

# ===== BACKUP CONFIGURATION =====
BACKUP_ENABLED=true
BACKUP_DIR=/var/backups/infinite_ai
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=CHANGE_ME_GENERATE_RANDOM_SECRET_64_BYTES

# ===== MONITORING & LOGGING =====
SENTRY_DSN=
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
LOG_FILE_PATH=logs/security.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=10

# ===== EMAIL CONFIGURATION (for alerts) =====
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=security@yourdomain.com
ALERT_EMAIL=admin@yourdomain.com

# ===== PRODUCTION SETTINGS =====
ENVIRONMENT=development
PRODUCTION_MODE=false
ENABLE_DEBUG_ENDPOINTS=false
