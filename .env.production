# ===== INFINITE AI SECURITY PLATFORM =====
# Production Environment Configuration
# DO NOT COMMIT TO VERSION CONTROL

# ===== APPLICATION SETTINGS =====
APP_NAME="Infinite AI Security Platform"
VERSION="2.0.0"
DEBUG=false

# ===== SECURITY SETTINGS =====
SECRET_KEY="your-super-secret-key-here-change-in-production"
JWT_SECRET_KEY="your-jwt-secret-key-here-change-in-production"
JWT_ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===== API KEYS =====
API_KEY_HEADER="X-API-Key"
MASTER_API_KEY="your-master-api-key-here"

# ===== DATABASE =====
DB_BACKEND=postgres
PG_HOST=127.0.0.1
PG_PORT=5432
PG_USER=postgres
PG_PASSWORD=postgres  # CHANGE THIS: Replace with your actual PostgreSQL password
PG_DATABASE=infinite_ai
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/infinite_ai"  # Update with actual password
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# ===== REDIS =====
REDIS_URL="redis://localhost:6379/0"
REDIS_PASSWORD=""

# ===== RATE LIMITING =====
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# ===== CORS SETTINGS =====
ALLOWED_ORIGINS="https://yourdomain.com,https://app.yourdomain.com"
ALLOWED_HOSTS="yourdomain.com,app.yourdomain.com"

# ===== AI AGENT API KEYS =====
OPENAI_API_KEY="sk-your-openai-api-key-here"
ANTHROPIC_API_KEY="your-anthropic-api-key-here"
GROQ_API_KEY="your-groq-api-key-here"
MISTRAL_API_KEY="your-mistral-api-key-here"

# ===== FILE PROCESSING =====
MAX_FILE_SIZE=104857600  # 100MB in bytes
ALLOWED_FILE_TYPES=".exe,.dll,.bin,.elf,.so,.dylib,.py,.js,.ts,.c,.cpp,.go,.rs"

# ===== LOGGING =====
LOG_LEVEL="INFO"
LOG_FILE="logs/app.log"

# ===== EMAIL SETTINGS (Optional) =====
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USERNAME="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"

# ===== MONITORING =====
PROMETHEUS_ENABLED=true
METRICS_PORT=9090
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# ===== CELERY BACKGROUND TASKS =====
CELERY_BROKER_URL="redis://localhost:6379/1"
CELERY_RESULT_BACKEND="redis://localhost:6379/1"

# ===== MFA SETTINGS =====
MFA_ENABLED=true
MFA_ISSUER="Infinite AI Security"

# ===== AUDIT LOGGING =====
AUDIT_LOG_ENABLED=true
AUDIT_LOG_FILE="logs/audit.log"
AUDIT_RETENTION_DAYS=2555  # 7 years for compliance

# ===== DEPLOYMENT =====
HOST="0.0.0.0"
PORT=8000
WORKERS=4
RELOAD=false